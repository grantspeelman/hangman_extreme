<h1>Listing games</h1>

<table>
  <tr>
    <th>Word</th>
    <th>Choices</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.word %></td>
    <td><%= game.choices %></td>
    <td><%= game.user %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

