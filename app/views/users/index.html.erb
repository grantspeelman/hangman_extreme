<% when 'top_week' %>
    top <%= link_to 'month', users_path(order: 'top_month'), id: 'view_top_month_users' %> players
<% when 'top_month' %>
    top <%= link_to 'week', users_path(order: 'top_week'), id: 'view_top_week_users' %> players
<% end %>
