<b><%= params[:order].to_s.humanize %></b>
   <br/>
<% case params[:order] %>
<% when 'top_week' %>
    This ranking is calculated by using the top 20 scored games for the week
<% when 'top_month' %>
    This ranking is calculated by using the top 80 scored games for the month
<% end %>
   <br/>
<ul>
  <%= content_tag_for(:li, @users) do |user| %>
    <%= display_user_name(user.name) %> - <%= params[:order] == 'top_week' ? user.weekly_rating : user.monthly_rating  %>
  <% end %>
</ul>

<br/>

<%= link_to 'home', root_path, id: 'root_page' %> |
view <%= link_to 'rank', user_path(current_user), id: 'view_rank' %> |
