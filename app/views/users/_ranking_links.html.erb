<% Winner::WINNING_PERIODS.each do |time_period| %>
    <%= link_to_unless params[:period] == time_period,
                       time_period,
                       users_path(period: time_period, rank_by: params[:rank_by]),
                       id: "#{time_period}_#{params[:rank_by] || 'rating'}" %> |
<% end %>
<br/>
<% Winner::WINNING_REASONS.each do |rank| %>
    <%= link_to_unless params[:rank_by] == rank,
                       rank,
                       users_path(period: params[:period], rank_by: rank),
                       id: "#{params[:period] || 'daily'}_#{rank}" %> |
<% end %>
<br/>
<% menu_item 'scoring explained', explain_path(action: 'scoring_categories'), id: 'scoring_categories' %>
<% menu_item 'winners view', winners_path(period: params[:period], reason: params[:rank_by]), id: 'winners' %>